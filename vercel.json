{
  "cleanUrls": true,
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/seguimiento",
      "headers": [
        { "key": "X-Frame-Options", "value": "ALLOW-FROM https://vynia.es" },
        { "key": "Content-Security-Policy", "value": "frame-ancestors 'self' https://vynia.es https://www.vynia.es" }
      ]
    },
    {
      "source": "/api/tracking",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://vynia.es" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/((?!api/|seguimiento).*)", "destination": "/index.html" }
  ]
}
